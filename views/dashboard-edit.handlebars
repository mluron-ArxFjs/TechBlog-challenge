<section class="section">
  <div class="card">
    <div class="columns is-centered">
      <div class="column is-11-mobile is-10-tablet is-9-desktop is-8-widescreen">
        <h5 class="title is-3">Edit Post</h5>
        <div class="card-body">
          <form class="form">
            <div class="field">
              <label class="label" for="title">Title</label>
              <div class="control">
                <input id="title" class="input" type="text" name="title" value="{{post.title}}" required />
              </div>
            </div>
            <div class="field">
              <label class="label" for="content">Content</label>
              <div class="control">
                <textarea id="content" class="textarea" name="content" rows="10" required>{{post.text}}</textarea>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <button class="button is-primary update-post-btn" type="submit">Update</button>
                <button class="button is-light delete-post-btn" type="submit">Delete</button>
              </div>
            </div>
          </form>
          {{#if post.comments}}
          <section class="card">
            <div class="card-header">
              <h3>Comments</h3>
            </div>

            <div class="card-body">
              {{#each post.comments}}
              <div>
                <p>
                  {{body}}
                </p>
                <p>
                  &mdash; {{user.username}}, {{format_date createdAt}}
                </p>
              </div>
              {{/each}}
            </div>
          </section>
          {{/if}}
        </div>

        <form id="new-comment-form" class="card">
          <h3>Add Comment:</h3>
          <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />
            <label class="form-label" for="comment-body">Comment</label>
            <textarea id="comment" name="comment-body" class="form-input"></textarea>
            <button id="comment-btn" type="submit" class="btn">Submit</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</section>

<script src="/js/editPost.js"></script>
<script src="/js/addComment.js"></script>